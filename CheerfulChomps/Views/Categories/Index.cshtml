@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>
<a asp-controller="Categories" asp-action="Create" class="btn btn-primary">Create a Category</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    @foreach (var category in Model)
    {
        <tr>
            <td>
                @category.Name
            </td>
            <td>
                <a asp-controller="Categories" asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-primary">
                    Edit
                </a>
                <a class="btn btn-danger" onclick="return confirmDelete();" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.CategoryId">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>
