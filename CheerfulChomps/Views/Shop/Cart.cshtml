@model IEnumerable<CheerfulChomps.Models.CartItem>

@{
    ViewData["Title"] = "Cart";
    decimal total = 0;
}

<h1>Cart</h1>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                total += (item.Quantity * item.Price);
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>

                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.CartItemId">Remove</a>
                    </td>
                </tr>
            }
            <tr>
                <td>
                    <a asp-action="Index" class="btn btn-primary">
                        Continue Shopping
                    </a>
                </td>
                <td>
                    <a asp-action="Checkout" class="btn btn-primary">
                        Checkout
                    </a>
                </td>
                <td>
                    <h3>@string.Format("{0:c}", total)</h3>
                </td>
                <td></td>
            </tr>
        </tbody>
    </table>
}
else
{
    <h2>Your Cart is empty.  You must be hungry!</h2>
    <a asp-action="Index" class="btn btn-primary">
        Shop Now
    </a>
}
